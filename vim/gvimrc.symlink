" gVim
set lines=999 columns=100
"set guifont=Source_Code_Pro:h18:cANSI
set guifont=Menlo-Regular:h18 
set clipboard=unnamed " use unnamed register for clipboard
set go+=a " auto-copy visual selection to win clipboard
set vb t_vb= " no bells

" better backspacing
set backspace=2
set backspace=indent,eol,start

" disable bells
set noeb vb t_vb="

nnoremap <BS> X
